<h1>Product Name: <%= @product.name %></h1>
<h2>Review</h2>
<ul>
  <% @reviews.each do |review| %>
    <li>
      <%= review.content %>(<%= review.created_at %>)
      rating: 
      <%= review.rating %> / 5
      by
      <%= review.user.email %>
      <% if review.user == current_user %>
        <%= link_to 'Edit', edit_product_review_path(@product, review) %>
        <%= button_to 'Delete', product_review_path(@product, review), method: :delete %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= link_to 'Product list', products_path %>